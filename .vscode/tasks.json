{
	"version": "2.0.0",
	"command": "npm",
	"tasks": [
		{
			"label": "install",
			"type": "shell",
			"args": [
				"install"
			],
			"problemMatcher": []
		},
		{
			"label": "update",
			"type": "shell",
			"args": [
				"update"
			],
			"problemMatcher": []
		},
		{
			"label": "dev",
			"type": "shell",
			"args": [
				"dev"
			],
			"isBackground": true,
			"problemMatcher": [
				"$tsc",
				"$tslint5"
			]
		},
		{
			"label": "build",
			"type": "shell",
			"args": [
				"run",
				"build"
			],
			"problemMatcher": [
				"$tsc",
				"$tslint5"
			],
			"group": {
				"_id": "build",
				"isDefault": false
			}
		},
		{
			"label": "release",
			"type": "shell",
			"args": [
				"run",
				"release"
			],
			"problemMatcher": []
		},
		{
			"label": "test",
			"type": "shell",
			"args": [
				"run",
				"test"
			],
			"problemMatcher": [
				"$tsc",
				"$tslint5"
			],
			"group": {
				"_id": "test",
				"isDefault": false
			}
		}
	]
}
